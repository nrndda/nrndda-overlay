# $Header: Exp $

PIDFILE=/var/run/ulatencyd/${SVCNAME}.pid

depend() {
	need localmount
	use modules
}

start() {
	local retval
	ebegin "Starting ulatencyd"

	start-stop-daemon --start --quiet --pidfile "${PIDFILE}" --exec /usr/sbin/ulatencyd -- \
		-f "${ULATENCYD_LOG}" ${ULATENCYD_OPTS}

	eend ${retval}
}

stop() {
	ebegin "Stopping ulatencyd"
	start-stop-daemon --stop --quiet --pidfile "${PIDFILE}" --exec /usr/sbin/ulatencyd
	eend $?
}
